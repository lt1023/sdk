<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_float_view_vip_tips_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/string_vip_tips"
        android:textColor="#002FA6"
        android:textSize="22sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#EBEBEC" />

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/string_vip_tips_close"
            android:padding="6dp"
            android:gravity="center"
            android:text="@string/string_vip_tips_close"
            android:textColor="#002FA6"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View

            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#EBEBEC" />


        <TextView
            android:id="@+id/string_vip_tips_jump"
            android:padding="6dp"
            android:gravity="center"
            android:text="@string/string_vip_tips_jump"
            android:textColor="#002FA6"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>